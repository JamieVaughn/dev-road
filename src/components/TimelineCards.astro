---
import TimelineCard from './TimelineCard.astro'
import type { TimelineItem } from '../data/timeline'
const { timeline } = Astro.props
---

<ul>
  {
    (timeline as TimelineItem[]).map((item) => (
      <TimelineCard item={item} />
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
</style>