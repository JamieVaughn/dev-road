---
import { Icon } from "astro-icon/components";
import SocialLinks from "./SocialLinks.astro";
const today = new Date();
---

<footer>
  <section>
    <div class="wrapper">
      <ul style="padding: 0;">
        <h6 style="white-space: nowrap;">Getting Started</h6>
        <li><a href="/about">About</a></li>
        <li><a href="/faq">FAQ</a></li>
      </ul>
      <SocialLinks vertical withLabels />
    </div>
    <ul>
      <h6>Essential Tools</h6>
      <li><a href="https://code.visualstudio.com/">VS Code (recommended)</a></li>
      <li><a href="https://vscode.dev">VSCode.dev (alternative)</a></li>
      <li><a href="https://git-scm.com/">Git SCM</a></li>
      <li><a href="https://nodejs.org/">Node.js</a></li>
      <li><a href="/extensions">VS Code Extensions</a></li>
    </ul>
    <ul class="resources">
      <h6>Resources</h6>
      <li><a href="/newsletter">Get the Newsletter</a></li>
      <li><a href="/career">Career Center</a></li>
      <li><a href="/courses">More Courses</a></li>
      <li><a href="/search_tips">Search Tips</a></li>
      <li><a href="/articles">Articles</a></li>
    </ul>
  </section>
  <hr id="footer-divider" />
  <div>
    <Icon name="logo" />
    <div>&copy; {today.getFullYear()} Dev Road. All rights reserved.</div>
  </div>
</footer>
<style>
  footer {
    padding: 2em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }
  section {
    display: flex;
    justify-content: start;
    gap: 1em;
    color: black !important;
    margin: 0;
    padding: 0 3em;
  }
  .wrapper {
    padding: 0.5em 1em;
    display: flex;
    gap: 1em;
    border: 1px solid silver;
    border-radius: 8px;
    height: fit-content;
  }
  .resources {
    margin-left: auto;
  }
  section h6 {
    margin-bottom: 0.5em;
  }
  section > ul {
    margin-top: 0.5em;
  }
  section ul {
    text-align: left;
  }
  section ul li {
    list-style: none;
    padding-left: 2rem;
    margin-bottom: 0;
  }
  html[data-theme="light"] section ul a {
    color: var(--dark);
  }
  html[data-theme="light"] section ul a {
    color: var(--gray-5);
  }
  footer hr#footer-divider {
    margin: 2em 0;
    height: 1px;
    border: 0;
    background-image: -webkit-linear-gradient(
      left,
      transparent,
      rgb(var(--gray)),
      transparent
    );
    background-image: -moz-linear-gradient(
      left,
      transparent,
      rgb(var(--gray)),
      transparent
    );
  }
  footer > div {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  footer svg {
    height: 48px;
    width: 200px;
  }
</style>
